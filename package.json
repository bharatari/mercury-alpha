{
  "name": "mercury-ion",
  "version": "2.1.0",
  "description": "A set of utilities designed for The Mercury.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "forever": "npm run build && pm2 start ./dist/index.js -i max --attach",
    "forever:force": "npm run build && pm2 start ./dist/index.js -i max --attach -f",
    "forever:stop": "pm2 stop all",
    "forever:delete": "pm2 delete all"
  },
  "dependencies": {
    "cron": "^1.2.1",
    "dotenv": "^4.0.0",
    "fbgraph": "^1.4.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "pm2": "^2.7.2",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.5",
    "s3": "^4.4.0"
  },
  "devDependencies": {
    "@types/cron": "^1.2.1",
    "@types/lodash": "^4.14.85",
    "@types/node": "^8.0.53",
    "@types/request-promise-native": "^1.0.10",
    "typescript": "^2.6.1"
  }
}
